---
import { t } from 'i18next'
import CloudsImg from 'src/img/clouds.png'

import { getImage } from 'astro:assets'
import ProductImageBackground from '@components/template/ProductImageBackground.astro'
const { modelTitle, description, technical, image, index } = Astro.props
const optimizedBackground = await getImage({ src: image, format: 'png' })
const mobileBg = await getImage({ src: CloudsImg, format: 'png' })
---

<div class="absolute z-10 h-screen w-full">
	<div class="relative h-full bg-black">
		<ProductImageBackground
			mobileBg={mobileBg}
			desktpBg={optimizedBackground}
			extraClassImg="object-contain sm:object-cover object-bottom h-auto sm:h-full sm:object-center"
		>
			<div class="z-70 relative flex h-full items-end justify-start text-black">
				<div class="relative flex h-1/2 items-end justify-center sm:h-auto">
					<div class="z-40 w-full px-4 pb-12 sm:px-8 md:px-16 xl:max-w-none xl:px-32">
						<span class="mb-2 block w-6 border-2 border-white"></span>
						<h3 class="pb-2 text-5xl font-bold text-white md:pb-1 xl:pb-2">
							{t(modelTitle)}
						</h3>
						<p class="mb-6 pt-2 text-[22px] font-semibold leading-7 text-white md:mb-0 xl:pt-4">
							{t(technical)}
						</p>
						<p
							class="mb-5 pt-2 text-[22px] font-semibold leading-7 text-white md:pt-0 md:font-normal lg:w-2/3 xl:mb-6"
						>
							{t(description)}
						</p>
						<button
							class="font-sm mx-auto block bg-white px-6 py-2 text-black sm:inline-block sm:bg-black sm:text-white xxl:px-8 xxl:py-4"
						>
							{t('landing.productsLineup.products.downloadBtn')}
						</button>
					</div>
				</div>
			</div>
		</ProductImageBackground>
	</div>
</div>
