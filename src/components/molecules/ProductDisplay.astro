---
import { t } from 'i18next'
import CloudsImg from 'src/img/clouds.png'

import { getImage } from 'astro:assets'
import ProductImageBackground from '@components/template/ProductImageBackground.astro'
const { modelTitle, description, technical, image, index, compatible } = Astro.props
const optimizedBackground = await getImage({ src: image, format: 'png' })
const mobileBg = await getImage({ src: CloudsImg, format: 'png' })
---

<div class="absolute z-10 h-screen w-full">
	<div class="relative h-full bg-black">
		<ProductImageBackground
			mobileBg={mobileBg}
			desktpBg={optimizedBackground}
			extraClassImg="object-contain sm:object-cover object-bottom h-auto sm:h-full sm:object-center"
		>
			<div class="z-70 relative flex h-full w-full items-end justify-start text-black">
				<div class="relative flex h-full w-full items-end justify-center">
					<div
						class="container-screen absolute bottom-0 z-40 h-[53%] w-full select-none pb-14 xl:max-w-none"
					>
						<span class="mb-2 block w-6 border-2 border-white"></span>
						<h3 class="pb-3 text-5xl font-bold text-white">
							{t(modelTitle)}
						</h3>
						<p class="mb-6 pt-2 text-[22px] font-semibold leading-7 text-white md:mb-0">
							{t(technical)}
							<strong class="font-semibold md:hidden">{t(compatible)}</strong>
						</p>
						<div class="mb-4">
							{
								t(description)
									.split('\n')
									.map(
										(line, index) =>
											index !== 0 && (
												<p class="block pt-0 text-[22px] font-semibold leading-7 text-white md:hidden md:pt-0 md:font-normal">
													{line}
												</p>
											)
									)
							}
							{
								t(description)
									.split('\n')
									.map((line) => (
										<p class="hidden pt-0 text-[22px] font-semibold leading-7 text-white md:block md:pt-0 md:font-normal">
											{line}
										</p>
									))
							}
						</div>
						<button
							class="font-sm mx-auto block bg-white px-6 py-2 text-black sm:inline-block md:bg-black md:text-white xxl:px-8 xxl:py-4"
						>
							{t('landing.productsLineup.products.downloadBtn')}
						</button>
					</div>
				</div>
			</div>
		</ProductImageBackground>
	</div>
</div>
<style>
	@media (max-height: 730px) {
		.container-screen {
			height: 55%;
		}
	}

	@media (max-height: 700px) {
		.container-screen {
			height: 62%;
		}
	}
</style>
