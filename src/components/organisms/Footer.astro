---
import { t } from 'i18next'
---

<footer id="footer" class="min-h-[50vh] bg-black text-lightGrey">
	<div class="container mx-auto max-w-[830px] bg-black pt-28">
		<div class="cta">
			<h6 class="px-24 text-center text-base font-semibold md:px-0 lg:text-2xl">
				{t('landing.footer.lineTop')}
			</h6>
			<div class="flex justify-center pb-12 pt-6 md:pb-20 md:pt-8">
				<button class="rounded-xl bg-white px-8 py-2 text-sm font-bold text-black">
					{t('landing.footer.moreInfoButton')}
				</button>
			</div>
		</div>
		<div class="info px-5 md:px-16 lg:px-0">
			<p class="mx-auto text-justify text-base md:text-2xl">
				{t('landing.footer.aboutIinfo')}
			</p>
		</div>
		<div class="info mt-32 flex flex-wrap items-start justify-between px-16 md:mt-36 lg:px-0">
			<div class="info-col shrink-0 lg:basis-1/2">
				<span class="mb-2 block w-10 border-[0.5px] border-greyOpaque"></span>
				<h6 class="text-lg text-greyOpaque lg:text-2xl">{t('landing.footer.sales')}</h6>
				<div class="country py-2">
					<p class="pb-1 pt-2 text-lg text-white md:pt-4 lg:text-2xl">
						<strong> ARGENTINA / EUROPE </strong>
					</p>
					<a href="mailto:sales@bk-comp.com" target="_blank" rel="noopener noreferrer">
						<p class="text-sm text-grey">sales@bk-comp.com</p>
					</a>
				</div>
				<div class="country py-2">
					<p class="pb-1 pt-2 text-lg text-white md:pt-4 lg:text-2xl">
						<strong> BRAZIL</strong>
					</p>
					<a href="mailto:michael.s@bk-comp.com" target="_blank" rel="noopener noreferrer">
						<p class="text-sm text-grey">michael.s@bk-comp.com</p>
					</a>
				</div>
				<div class="country py-2">
					<p class="pb-1 pt-2 text-lg text-white md:pt-4 lg:text-2xl">
						<strong> AUSTRALIA</strong>
					</p>
					<a
						href="mailto:marty@westernmechanicalqld.com.au"
						target="_blank"
						rel="noopener noreferrer"
					>
						<p class="text-sm text-grey">marty@westernmechanicalqld.com.au</p>
					</a>
				</div>
			</div>
			<div
				class="info-col mt-8 flex h-full flex-col items-baseline justify-between md:mt-0 lg:basis-1/2"
			>
				<div class="company mb-12 md:mb-24">
					<span class="mb-2 block w-10 border-[0.5px] border-greyOpaque"></span>
					<h6 class="mb-4 text-lg text-greyOpaque lg:text-2xl">BK COMP</h6>
					<div class="py-4">
						<p class="text-sm text-grey">
							Parque industrial y Logístico Panamericana KM29 Unidad E, APQ El Talar de Pacheco
							Buenos Aires AR, 9 de Julio 350 lote 18.(+54) 11 4064 1911
						</p>
					</div>
				</div>
				<div class="media mt-auto">
					<h6 class="mb-4 text-lg text-lightGrey md:text-xl">{t('landing.footer.followUs')}</h6>
					<span class="mb-10 block w-16 border-[0.5px] border-grey"></span>
					<div class="icons flex gap-12">
						<a href="https://www.linkedin.com/company/bk-comp/" target="_blank" rel="noreferrer">
							<img src="/assets/icons/linkedin.svg" alt="linkedin icon" loading="lazy" />
						</a>
						<a href="https://www.instagram.com/bk_comp/" target="_blank" rel="noreferrer">
							<img src="/assets/icons/instagram.svg" alt="instagram icon" loading="lazy" />
						</a>
						<a href="https://www.youtube.com/@bkcomp7478" target="_blank" rel="noreferrer">
							<img src="/assets/icons/youtube.svg" alt="youtube icon" loading="lazy" />
						</a>
					</div>
				</div>
			</div>
		</div>
		<div
			class="flex w-full items-center justify-between px-8 py-10 md:justify-start md:py-20 lg:px-0"
		>
			<p class="text-sm text-grey md:w-1/2">© 2024 BK-Comp. All Rights Reserved.</p>
			<a href="#hero">
				<img src="/assets/icons/arrow-up.svg" alt="linkedin icon" loading="lazy" />
			</a>
		</div>
	</div>
</footer>
<style>
	@media (max-height: 480px) {
		#footer > div > div.info.px-5.md\:px-16.lg\:px-0 > p {
			padding: 0 64px;
		}
	}
</style>
