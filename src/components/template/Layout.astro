---
import i18next from 'i18next'
import { HeadHrefLangs } from 'astro-i18next/components'
import Header from '../organisms/Header.astro'
import Footer from '../organisms/Footer.astro'
import Loader from '@components/atom/Loader.astro'

import '../../index.css'
const links = [
	{
		label: 'landing.nav.home',
		to: '/'
	},
	{
		label: 'landing.nav.aboutUs',
		to: '/'
	},
	{
		label: 'landing.nav.benefits',
		to: '/'
	},
	{
		label: 'landing.nav.products',
		to: '/'
	},
	{
		label: 'landing.nav.accesories',
		to: '/'
	},
	{
		label: 'landing.nav.contact',
		to: '/'
	}
]
---

<html lang={i18next.language}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content="{Astro.generator}" />
		<meta
			name="description"
			content="BK. Company innovating in Agriculture Technology. Lightweight Sprayer Booms to boost efficiency."
		/>
		<link
			rel="preload"
			href="/fonts/Neo Sans Std Regular.otf"
			as="font"
			type="font/otf"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/Neo Sans Std Medium.otf"
			as="font"
			type="font/otf"
			crossorigin
		/>
		<title>BK</title>
		<HeadHrefLangs />
		<script>
			// import function to register Swiper custom elements
			import { register } from 'swiper/element/bundle'
			// register Swiper custom elements
			register()
		</script>
	</head>

	<body class="font-neoSans">
		<Loader />
		<Header />
		<slot />
		<Footer />
		<script>
			const video = document.querySelector('#landing-video')
			const loader = document.querySelector('.loader-content')

			video.onloadeddata = function () {
				loader.classList.add('hidden')
			}
		</script>

		<script is:inline src="https://unpkg.com/@studio-freight/lenis@1.0.32/dist/lenis.min.js"
		></script>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/gsap.min.js"></script>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/ScrollTrigger.min.js"
		></script>
		<script src="../../scripts/gsap.js"></script>
		<style is:global>
			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Bold.otf');
				font-weight: bold;
				font-style: normal;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Bold Italic.otf');
				font-weight: 900;
				font-style: italic;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Medium Italic.otf');
				font-weight: 500;
				font-style: italic;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Regular.otf');
				font-weight: 300;
				font-style: normal;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Ultra.otf');
				font-weight: 900;
				font-style: normal;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Light Italic.otf');
				font-weight: 300;
				font-style: italic;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Medium.otf');
				font-weight: 500;
				font-style: normal;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Italic.otf');
				font-weight: normal;
				font-style: italic;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Bold Italic.otf');
				font-weight: bold;
				font-style: italic;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Regular.otf');
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: 'NeoSans';
				src: url('/fonts/Neo Sans Std Light.otf');
				font-weight: 100;
				font-style: light;
			}

			@media (min-width: 1150px) and (max-height: 750px) {
			}

			#lang-selector > option {
				color: #000 !important;
				box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
			}
		</style>
	</body>
</html>
