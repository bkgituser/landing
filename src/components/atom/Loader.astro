---
import Logo from '../../img/logo-bk.png'
import { Image } from 'astro:assets'
---

<div class="loader-content fixed z-[999] h-screen w-full overflow-hidden bg-black">
	<img
		src={Logo.src}
		width={200}
		height={150}
		alt="Logo BK"
		class="left-8 top-0 md:absolute md:left-32"
	/>
	<div class="absolute left-1/2 top-1/2 -translate-x-1/2">
		<div class="loader"></div>
	</div>
</div>
<style>
	.loader {
		width: 50px;
		padding: 8px;
		aspect-ratio: 1;
		border-radius: 50%;
		background: #fff;
		--_m: conic-gradient(#0000 10%, #000), linear-gradient(#000 0 0) content-box;
		-webkit-mask: var(--_m);
		mask: var(--_m);
		-webkit-mask-composite: source-out;
		mask-composite: subtract;
		animation: l3 1s infinite linear;
	}
	@keyframes l3 {
		to {
			transform: rotate(1turn);
		}
	}
</style>
