---
import CustomSlider from '@components/organisms/slider/CustomSlider.astro'
import IndexElements from '@components/organisms/slider/IndexElements.astro'
import SliderElements from '@components/organisms/slider/SliderElements.astro'
import VideoBackground from '@components/template/VideoBackground.astro'
import { Trans } from 'astro-i18next/components'
import { t } from 'i18next'

const data = [
	{
		label: 'landing.benefits.item1.featureLine',
		data: 'landing.benefits.item1.description'
	},
	{
		label: 'landing.benefits.item2.featureLine',
		data: 'landing.benefits.item2.description'
	},
	{
		label: 'landing.benefits.item3.featureLine',
		data: 'landing.benefits.item3.description'
	},
	{
		label: 'landing.benefits.item4.featureLine',
		data: 'landing.benefits.item4.description'
	},
	{
		label: 'landing.benefits.item5.featureLine',
		data: 'landing.benefits.item5.description'
	},
	{
		label: 'landing.benefits.item6.featureLine',
		data: 'landing.benefits.item6.description'
	}
]

const idBenefits = 'benefits-slider'
---

<section id="benefits" class="relative h-screen">
	<VideoBackground video="/assets/videos/video-benefits.mp4" autoplay={true}>
		<div
			class="absolute z-10 h-full w-full bg-[linear-gradient(180deg,_rgba(0,_0,_0,_0.00)_0%,_rgba(0,_0,_0,_0.40)_100%)] lg:bottom-0 lg:h-1/2"
		>
		</div>
		<div class="container-screen flex h-full flex-col items-center justify-end">
			<CustomSlider
				id={idBenefits}
				lengthElements={data.length}
				classSlideContainer="flex flex-col justify-between md:justify-end  slideContainer"
			>
				<SliderElements
					id={idBenefits}
					customClass="h-[70%] md:h-[55%] xl:h-[40%] justify-between z-20"
					isBackground={false}
				>
					{
						data.map((item) => {
							return (
								<div class="benefits-description item absolute w-full select-none pt-20 md:bottom-0 md:top-6 md:pb-0 md:pt-0 lg:top-auto">
									<div class="">
										<div class="title-lineup lg:mb-12">
											<h2 class="mb-3 text-left text-2xl text-white">
												<Trans i18nKey="landing.benefits.badge">
													<strong>BENEFITS</strong> - BK BOOMS
												</Trans>
											</h2>
										</div>
										<span class="mb-2 block h-1 w-10 bg-white drop-shadow-lg sm:drop-shadow-none" />
										<p class="item-data text-left text-[2rem] font-bold leading-10 text-white drop-shadow-lg sm:drop-shadow-none md:text-3xl lg:leading-10 xl:w-4/5 xl:text-plusMid">
											{t(item.data)}
										</p>
									</div>
								</div>
							)
						})
					}</SliderElements
				>
				<IndexElements
					id={idBenefits}
					customClass="h-[25%] md:h-[35%] lg:h-[25%] md:justify-between mb-8 xs:mb-12 md:mb-4 z-20"
				>
					{
						data.map((item) => {
							const lines = t(item.label).split('\n')

							return (
								<div class="index-container absolute w-full basis-[100%] md:static md:w-auto md:basis-1/3 lg:basis-auto ">
									<div class="flex w-full items-center justify-center  md:w-auto">
										<div class="item-benefit-index relative z-20 flex h-[calc(100vh_*_0.20)] w-[64%] cursor-pointer select-none flex-col items-center justify-center text-white transition-all duration-300 ease-in md:h-[85px] md:w-[140px] laptopX:h-[100px] laptopX:w-[170px] xl:h-[120px] xl:w-[189px] xl:px-0">
											<p
												class={`lg:max-auto z-40 my-0 text-left text-2xl leading-6 md:max-w-[135px]  md:text-base md:leading-[0.85rem] xl:text-xl xl:leading-[1.1rem]`}
											>
												{lines.map((description) => {
													return (
														<>
															{description} <br />
														</>
													)
												})}
											</p>
										</div>
									</div>
								</div>
							)
						})
					}
				</IndexElements>
			</CustomSlider>
		</div>
	</VideoBackground>
</section>
<style>
	/* HORIZONTAL */
	@media (max-height: 480px) {
		.index-container {
			position: static;
			width: auto;
			flex-basis: auto;
			justify-content: center;
			margin: 0 auto;
		}

		#benefits-slider-index-container {
			justify-content: space-evenly;
			margin-bottom: 2rem;
		}

		.item-benefit-index {
			height: 80px;
			width: 120px;
		}

		.item-benefit-index p {
			font-size: 0.8rem;
		}

		.item {
			top: 0;
		}
	}

	/* BENEFIT ITEM STYLE */
	.item-benefit-index:before {
		content: '';
		position: absolute;
		inset: 0;
		background: #fff;
		overflow: hidden;
		clip-path: polygon(
			0 0,
			100% 0,
			100% 100%,
			31px 100%,
			0 calc(100% - 31px),
			0 0,
			1px 1px,
			1px calc(100% - 31px - 0.41px),
			calc(31px + 0.41px) calc(100% - 1px),
			calc(100% - 1px) calc(100% - 1px),
			calc(100% - 1px) 1px,
			1px 1px
		);
	}

	.item-benefit-index:after {
		content: '';
		position: absolute;
		inset: 0;
		background: rgba(0, 0, 0, 0.2);
		--mask: linear-gradient(45deg, #0000 22.28px, #000 0);
		-webkit-mask: var(--mask);
		mask: var(--mask);
		mask: var(--mask);
		transition: all ease-in 300ms;
	}

	.item-index-active .item-benefit-index {
		transition: all 300ms ease;
		font-weight: 500;
		color: #000 !important;
	}

	.item-index-active .item-benefit-index:after {
		background: #fff;
	}

	@media (min-width: 768px) and (max-width: 1400px) {
		/* BENEFIT ITEM STYLE */
		.item-benefit-index:before {
			clip-path: polygon(
				0 0,
				100% 0,
				100% 100%,
				24px 100%,
				0 calc(100% - 24px),
				0 0,
				1px 1px,
				1px calc(100% - 24px - 0.41px),
				calc(24px + 0.41px) calc(100% - 1px),
				calc(100% - 1px) calc(100% - 1px),
				calc(100% - 1px) 1px,
				1px 1px
			);
		}

		.item-benefit-index:after {
			--mask: linear-gradient(45deg, #0000 18.28px, #000 0);
			-webkit-mask: var(--mask);
			mask: var(--mask);
			mask: var(--mask);
			transition: all ease-in 300ms;
		}
	}

	@media (max-width: 768px) {
		/* BENEFIT ITEM STYLE */
		.item-benefit-index:before {
			clip-path: polygon(
				0 0,
				100% 0,
				100% 100%,
				42px 100%,
				0 calc(100% - 42px),
				0 0,
				1px 1px,
				1px calc(100% - 42px - 0.41px),
				calc(42px + 0.41px) calc(100% - 1px),
				calc(100% - 1px) calc(100% - 1px),
				calc(100% - 1px) 1px,
				1px 1px
			);
		}

		.item-benefit-index:after {
			--mask: linear-gradient(45deg, #0000 30.28px, #000 0);
			-webkit-mask: var(--mask);
			mask: var(--mask);
			mask: var(--mask);
			transition: all ease-in 300ms;
		}
	}

	@media (min-height: 480px) and (max-width: 768px) {
		.item-benefit-index {
			opacity: 0;
		}

		.item-index-active .item-benefit-index {
			opacity: 1;
		}
	}

	@media (max-height: 750px) {
		.item-data {
			font-size: 1.875rem;
		}
	}

	/* LANDSCAPE */
	@media (max-height: 480px) {
		.container-screen {
			max-width: none;
			padding: 1rem;
		}
		.item-benefit-index {
			height: 70px;
			width: 90px;
			line-height: 0.6rem !important;
		}

		/* BENEFIT ITEM STYLE */
		.item-benefit-index:before {
			clip-path: polygon(
				0 0,
				100% 0,
				100% 100%,
				15px 100%,
				0 calc(100% - 15px),
				0 0,
				1px 1px,
				1px calc(100% - 15px - 0.41px),
				calc(15px + 0.41px) calc(100% - 1px),
				calc(100% - 1px) calc(100% - 1px),
				calc(100% - 1px) 1px,
				1px 1px
			);
		}

		.item-benefit-index:after {
			--mask: linear-gradient(45deg, #0000 11.28px, #000 0);
			-webkit-mask: var(--mask);
			mask: var(--mask);
			mask: var(--mask);
			transition: all ease-in 300ms;
		}

		.item-benefit-index > p {
			line-height: 0.7rem !important;
		}
	}

	@media (max-height: 700px) {
		.benefits-description {
			padding-top: 2rem;
		}
	}
</style>
